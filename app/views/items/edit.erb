<h1>Edit An Existing Item!</h1>

<br> </br>

<form action="/items/<%= @item.id %>" method="post">


  <label for="title">Title: </label>
  <input type="text" name="title" value="<%= @item.title %>" id="title"/>

  <br></br>

  <label for="character">Character: </label>
  <input type="text" name="character" value="<%= @item.character %>" id="character"/>

  <br></br>

  <label for="description">Description: </label>
  <input type="text" name="description" value="<%= @item.description %>" id="description"/>

  <br></br>

     <input type="submit" id="submit" value="Edit This Item" />
</form>
